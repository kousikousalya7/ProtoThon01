#include<stdio.h>
int main()
{
    int x,y,z,choice;
    printf("Enter x\n");
    scanf("%d",&x);
    printf("Enter y\n");
    scanf("%d",&y);
    printf("1.Add\n2.Sub\n3.mul\n4.div\n");
    printf("Enter your choice\n");
    scanf("%d",&choice);
    switch(choice)
    {
    case 1:
        z=x+y;
        printf("%d",z);
        break;
    case 2:
        z=x-y;
        printf("%d",z);
        break;
    case 3:
        z=x*y;
        printf("%d",z);
        break;
    case 4:
        if (y==0)
        {
            printf("Invalid");
            break;
        }
        else
        {
            z=x/y;
            printf("%d",&z);
            break;
        }
    default:
        printf("Invalid");

    }
}
